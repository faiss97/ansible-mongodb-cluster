# =============================================================================
# MongoDB System Limits Configuration
# =============================================================================
# Generated by Ansible - Do not edit manually
# /etc/security/limits.d/mongodb.conf
# =============================================================================

# File descriptor limits
{{ mongodb_user }}     soft    nofile    {{ mongodb_limit_nofile }}
{{ mongodb_user }}     hard    nofile    {{ mongodb_limit_nofile }}

# Process limits
{{ mongodb_user }}     soft    nproc     {{ mongodb_limit_nproc }}
{{ mongodb_user }}     hard    nproc     {{ mongodb_limit_nproc }}

# Memory lock limits (for WiredTiger)
{{ mongodb_user }}     soft    memlock   {{ mongodb_limit_memlock }}
{{ mongodb_user }}     hard    memlock   {{ mongodb_limit_memlock }}

# Stack size
{{ mongodb_user }}     soft    stack     {{ mongodb_limit_stack }}
{{ mongodb_user }}     hard    stack     {{ mongodb_limit_stack }}

# Core file size (unlimited for debugging)
{{ mongodb_user }}     soft    core      unlimited
{{ mongodb_user }}     hard    core      unlimited
