{% if mongodb_security_auth_enabled %}
MONGODB_URI="mongodb://{{ mongodb_monitoring_user }}:{{ mongodb_monitoring_password }}@localhost:{{ mongodb_port }}/admin?authSource=admin"
{% else %}
MONGODB_URI="mongodb://localhost:{{ mongodb_port }}"
{% endif %}

{% if mongodb_tls_enabled %}
MONGODB_URI="${MONGODB_URI}&tls=true"
{% endif %}
